{
    "name": "clearmark",
    "private": true,
    "version": "0.1.0",
    "description": "A beautiful and modern markdown editor",
    "author": {
        "name": "Mason Parle"
    },
    "type": "commonjs",
    "main": "electron.cjs",
    "scripts": {
        "dev": "vite --host",
        "build": "tsc --noEmit false --skipLibCheck && vite build && electron-builder",
        "web-build": "vite build",
        "preview": "vite preview",
        "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "electron:dev": "vite build && electron .",
        "electron:build": "vite build && electron-builder",
        "electron:preview": "vite preview"
    },
    "dependencies": {
        "@types/react-syntax-highlighter": "^15.5.13",
        "clsx": "^2.1.1",
        "lucide-react": "^0.288.0",
        "mermaid": "^11.6.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-markdown": "^10.1.0",
        "react-syntax-highlighter": "^15.6.1",
        "remark-gfm": "^4.0.1",
        "slate": "^0.94.1",
        "slate-history": "^0.113.1",
        "slate-react": "^0.97.2",
        "tailwind-merge": "^3.3.0"
    },
    "devDependencies": {
        "@types/electron": "^1.4.38",
        "@types/node": "^22.15.3",
        "@types/react": "^18.2.15",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "@vitejs/plugin-react": "^4.0.3",
        "autoprefixer": "^10.4.14",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "eslint": "^8.45.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.3",
        "postcss": "^8.4.27",
        "tailwindcss": "^3.3.3",
        "typescript": "^5.0.2",
        "vite-plugin-electron": "^0.15.3",
        "vite-plugin-electron-renderer": "^0.14.5"
    },
    "build": {
        "appId": "com.clearmark.app",
        "productName": "ClearMark",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*",
            "electron.cjs"
        ],
        "win": {
            "target": [
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "public/icon.ico"
        },
        "mac": {
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "category": "public.app-category.productivity"
        },
        "linux": {
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "deb",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "category": "Office"
        },
        "portable": {
            "artifactName": "ClearMark.exe"
        }
    }
}
